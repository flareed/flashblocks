<div class="content flex flex-col space-y-8 items-center">
    <div>
        <h2 class="text-lg font-bold mb-4 text-center">Navigation</h2>
        <div class="flex flex-row justify-center md:space-x-2">
            <a href="/account?view=detail" class="hover:text-gray-400 bg-gray-100 p-2">Account Detail</a>

            <a href="/account?view=manage_orders" class="hover:text-gray-400 bg-gray-100 p-2">Manage Orders</a>
            {{#if isAdmin}}
            <a href="/account?view=manage_users" class="hover:text-gray-400 bg-gray-100 p-2">Manage Users</a>
            <a href="/account?view=manage_products" class="hover:text-gray-400 bg-gray-100 p-2">Manage Products</a>
            {{/if}}
        </div>
    </div>

    <!-- Search and Sort -->
    <div class="flex flex-col md:flex-row md:space-x-4 w-full md:justify-center">
        <!-- Search -->
        <div class="flex flex-col space-y-2">
            <label for="search-input" class="font-semibold text-gray-700">Search</label>
            <input type="text" id="search-input" class="w-full p-2 border border-gray-300 rounded-md"
                placeholder="Search by name or email" />
        </div>

        <!-- Sort -->
        <div class="flex flex-col space-y-2">
            <label for="sort-select" class="font-semibold text-gray-700">Sort</label>
            <select id="sort-select" class="w-full p-2 border border-gray-300 rounded-md">
                <option value="name-asc">Name (A-Z)</option>
                <option value="name-desc">Name (Z-A)</option>
                <option value="email-asc">Email (A-Z)</option>
                <option value="email-desc">Email (Z-A)</option>
            </select>
        </div>
    </div>

    <!-- User Table -->
    <div>
        <h1 class="text-2xl font-bold mb-4">User Management</h1>
        <table class="table-auto w-full border-collapse border border-gray-300">
            <thead>
                <tr>
                    <th class="border border-gray-300 p-2">Username</th>
                    <th class="border border-gray-300 p-2">Email</th>
                    <th class="border border-gray-300 p-2">Role</th>
                    <th class="border border-gray-300 p-2">Address</th>
                    <th class="border border-gray-300 p-2">Credit card</th>
                </tr>
            </thead>
            <tbody id="user-table-body">
                {{#each users}}
                <tr>
                    <td class="border border-gray-300 p-2">{{username}}</td>
                    <td class="border border-gray-300 p-2">{{email}}</td>
                    <td class="border border-gray-300 p-2">{{role}}</td>
                    <td class="border border-gray-300 p-2">{{address}}</td>
                    <td class="border border-gray-300 p-2">{{creditcard}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</div>