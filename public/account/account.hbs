<div class="content flex flex-col justify-center items-center space-y-8">
    <!-- Title -->
    <div class="flex flex-col text-center w-full">
        <h1 class="sm:text-3xl text-2xl font-medium title-font text-gray-900">Account page</h1>
    </div>

    <!-- Textboxes -->
    <div class="flex flex-col md:min-w-[360px] space-y-2">
        <!-- Username -->
        <div class="mb-4 w-full">
            <label for="username" class="block text-lg font-semibold text-gray-700">Username</label>
            <input type="text" id="username" value="{{username}}" disabled
                class="w-full p-2 border border-gray-300 rounded-md bg-gray-100 text-gray-600" />
        </div>

        <!-- Email -->
        <div class="mb-4 w-full">
            <label for="email" class="block text-lg font-semibold text-gray-700">Email</label>
            <input type="email" id="email" value="{{email}}" disabled
                class="w-full p-2 border border-gray-300 rounded-md bg-gray-100 text-gray-600" />
        </div>

        <!-- Logout Button -->
        <form id="logout_form" class="w-full">
            <button type="submit"
                class="w-full bg-red-500 text-white font-semibold py-2 rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">
                Log out
            </button>

            <section class="mt-4 bg-red-500 w-full hidden" id="message-section">
                <div class="font-bold p-4" id="message"></div>
            </section>
        </form>
    </div>
</div>