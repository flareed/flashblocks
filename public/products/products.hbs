<div class="content">
    <!-- Page title -->
    <div class="text-center w-full mb-8">
        <h1 class="sm:text-3xl text-2xl font-medium title-font text-gray-900">Products</h1>
    </div>

    <div class="flex flex-col lg:flex-row">
        <div class="lg:w-1/6">
            <form id="filter-form" class="space-y-4">
                <div>
                    <label for="text" class="block text-sm font-medium text-gray-700">Search Text</label>
                    <input type="text" name="text" id="text" placeholder="Search..."
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                </div>

                <div>
                    <label for="price_from" class="block text-sm font-medium text-gray-700">Starting Price</label>
                    <input type="number" name="price_from" id="price_from" placeholder="Min Price"
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">Category</label>
                    <div id="category">
                        <div>
                            <input type="checkbox" name="category" value="EDC Flashlight" id="edc-flashlight">
                            <label for="edc-flashlight">EDC Flashlight</label>
                        </div>
                        <div>
                            <input type="checkbox" name="category" value="Tactical Flashlight" id="tactical-flashlight">
                            <label for="tactical-flashlight">Tactical Flashlight</label>
                        </div>
                        <div>
                            <input type="checkbox" name="category" value="Diving Flashlight" id="diving-flashlight">
                            <label for="diving-flashlight">Diving Flashlight</label>
                        </div>
                    </div>
                </div>

                <div>
                    <label for="lumens_from" class="block text-sm font-medium text-gray-700">Max Lumens from</label>
                    <input type="number" name="lumens_from" id="lumens_from" placeholder="Min Lumens"
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                </div>

                <div>
                    <label for="led_chip" class="block text-sm font-medium text-gray-700">LED Chip</label>
                    <input type="text" name="led_chip" id="led_chip" placeholder="LED Chip"
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                </div>

                <button type="button" id="apply-filters"
                    class="mt-4 w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    Apply Filters
                </button>
            </form>
        </div>

        <div class="lg:w-5/6">
            <div class="flex flex-col items-center space-x-0 md:flex-row md:space-x-2">
                <button id="sort-name-asc" class="w-48 bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-4">
                    Name A->Z
                </button>
                <button id="sort-name-desc" class="w-48 bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-4">
                    Name Z->A
                </button>
                <button id="sort-price-asc" class="w-48 bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-4">
                    Price low to high
                </button>
                <button id="sort-price-desc" class="w-48 bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-4">
                    Price high to flow
                </button>
            </div>

            <!-- Found nothing text -->
            <div class="flex flex-grow h-40 lg:h-auto items-center justify-center text-xl font-bold border hidden"
                id="no-products">
                No products found.
            </div>

            <div id="product-list" class="flex flex-row flex-wrap">
                {{#each product_list}}
                {{> product}}
                {{/each}}
            </div>
        </div>
    </div>

    <div id="pagination-controls" class="flex flex-row justify-center items-center mt-6 mb-4">
        <button id="prev-page"
            class="w-24 bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-l disabled:opacity-50"
            disabled>
            Previous
        </button>

        <div id="current-page" class="ml-2 mr-2">Page 1</span></div>

        <button id="next-page"
            class="w-24 bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-r disabled:opacity-50">
            Next
        </button>
    </div>
</div>