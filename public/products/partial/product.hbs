<!-- Product -->
<product class="product flex flex-col lg:w-1/4 md:w-1/2 md:p-4 w-full">
    {{!-- Image --}}
    <a href="{{product_link}}" class="product-link block relative h-48 rounded overflow-hidden">
        <img alt="product image" class="product-image object-cover object-center w-full h-full block"
            src="{{product_image}}">
    </a>

    <div class="flex h-auto md:h-40 lg:h-44 mt-4">
        <div class="w-3/4 flex flex-col">
            {{!-- Category --}}
            <a href="{{product_category_link}}"
                class="product-category text-indigo-500 text-xs tracking-widest title-font mb-1">{{product_category}}</a><br>

            {{!-- Name --}}
            <a href="{{product_link}}"
                class="product-name text-gray-900 title-font text-lg font-medium">{{product_display_name}}</a>

            {{!-- Description --}}
            <h4 class="product-description flex-grow text-gray-400 text-md md:text-sm">{{product_description}}</h4>

            {{!-- Price --}}
            <p class="mt-1">
                <span class="product_currency">$</span>
                <span class="product_price">{{product_price}}</span>
            </p>
        </div>

        <div class="w-1/4 flex justify-end items-center">
            <button class="product-cart-button cart-icon icon-filter w-16 h-16"></button>
        </div>
    </div>
</product>

<!-- Divider  -->
<div class="bg-gray-200 w-full h-[1px] visible mb-4 md:hidden md:mb-0"></div>