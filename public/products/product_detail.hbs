<!-- Content -->
<div class="content flex flex-col items-center space-y-8">
    {{!-- Product detail --}}
    <div class="text-gray-600 body-font overflow-hidden xl:min-w-[800px] xl:max-w-[1000px]">
        <div class="flex flex-wrap items-center">
            <div class="w-full lg:w-1/2 lg:pr-10 lg:py-6 mb-6 lg:mb-0">
                {{!-- Name + category --}}
                <h2 class="product-category text-sm title-font text-gray-500 tracking-widest">{{product_category}}</h2>
                <h1 class="product-name text-gray-900 text-3xl title-font font-medium mb-4">{{product_display_name}}
                </h1>

                {{!-- Top bar (not usable yet) --}}
                <div class="flex mb-4">
                    <a class="flex-grow text-indigo-500 border-b-2 border-indigo-500 py-2 text-lg px-1">Description</a>
                    <a class="flex-grow border-b-2 border-gray-300 py-2 text-lg px-1">Reviews</a>
                    <a class="flex-grow border-b-2 border-gray-300 py-2 text-lg px-1">Details</a>
                </div>

                {{!-- Some brief info --}}
                <div>
                    <p class="mb-4">{{product_description}}</p>
                </div>

                {{!-- Specs --}}
                <div class="flex border-t border-gray-200 py-2">
                    <span class="text-gray-500">LED chip</span>
                    <span class="ml-auto text-gray-900">{{product_led_chip}}</span>
                </div>
                <div class="flex border-t border-gray-200 py-2">
                    <span class="text-gray-500">Max lumens</span>
                    <span class="ml-auto text-gray-900">{{product_max_lumens}}</span>
                </div>
                <div class="flex border-t border-b mb-6 border-gray-200 py-2">
                    <span class="text-gray-500">Battery</span>
                    <span class="ml-auto text-gray-900">{{product_battery}}</span>
                </div>

                {{!-- Price --}}
                <div class="flex justify-between">
                    <p class="title-font font-medium text-2xl text-gray-900">
                        <span class="product_currency">$</span>
                        <span class="product_price">{{product_price}}</span>
                    </p>

                    <!-- Buttons -->
                    <div class="flex">
                        <button
                            class="rounded-full w-10 h-10 bg-gray-200 p-0 border-0 inline-flex items-center justify-center text-gray-500 ml-4">
                            <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                class="w-5 h-5" viewBox="0 0 24 24">
                                <path
                                    d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z">
                                </path>
                            </svg>
                        </button>
                        <button class="cart-icon icon-filter w-10 h-10"></button>
                    </div>
                </div>
            </div>

            {{!-- Image --}}
            <img alt="product image" class="product-iamge lg:w-1/2 w-full lg:h-auto object-cover object-center rounded"
                src="{{product_image}}">
        </div>
    </div>

    <!-- Divider  -->
    <div class="bg-gray-200 w-full h-[1px] {{#if same_category_products}}visible{{else}}hidden{{/if}}"></div>

    {{!-- Other products of same category --}}
    <div class="text-center w-full mb-8 {{#if same_category_products}}visible{{else}}hidden{{/if}}">
        <h1 class="sm:text-3xl text-2xl font-medium title-font text-gray-900">Other products of the same category</h1>
    </div>

    <div class="flex flex-wrap w-full place-self-start">
        {{#each same_category_products}}
        {{> product}}
        {{/each}}
    </div>
</div>