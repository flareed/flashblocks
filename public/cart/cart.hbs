<div class="flex flex-col md:border md:min-h-[600px] md:border-gray-300 md:p-2">
    {{#if products}}

    {{#each products}}
    <!-- Cart Items -->
    <div class="border md:border-0">
        <!-- Cart Item -->
        <div
            class="cart-row flex items-center p-2 border md:p-4 {{#if @first}} md:border-2 {{else}} md:border-t-0 md:border-l-2 md:border-r-2 md:border-b-2 {{/if}} md:border-dotted">
            <input type="checkbox"
                class="product-select flex justify-center items-center mr-2 md:mr-4 w-4 h-4 text-xs md:text-base md:w-6 md:h-6 border border-gray-300 text-gray-600 hover:bg-gray-200 focus:ring-2 focus:ring-indigo-500"
                aria-checked="false">

            {{!-- Image --}}
            <img class="w-20 h-20 object-cover rounded mr-2 md:mr-4" src="{{imagepath}}" alt="Item Image">

            {{!-- Product name, description, control buttons --}}
            <div class="flex flex-col min-h-32 md:min-h-0 md:flex-row md:w-full items-center md:space-x-4">
                {{!-- Product name, description --}}
                <div class="flex-grow">
                    <p class="product-id hidden">{{id}}</p>
                    <p class="product-name hidden">{{name}}</p>
                    <a href="{{link}}">
                        <p class="text-lg font-medium text-gray-800">{{display_name}}</p>
                    </a>
                    <p class="text-sm text-gray-500">{{description}}</p>
                </div>

                <!-- Price & decrease & increase -->
                <div class="flex w-full md:w-auto items-center justify-between">
                    {{!-- Price --}}
                    <div class="md:mr-2">
                        $ <span class="price">{{price}}</span>
                    </div>

                    {{!-- Decrease & increase buttons --}}
                    <div>
                        <div class="flex items-center space-x-2">
                            <button
                                class="decrease-button w-6 h-6 md:w-8 md:h-8 bg-gray-100 border border-gray-300 rounded hover:bg-gray-200 text-gray-800">
                                -
                            </button>
                            <p class="product-quantity text-lg text-gray-800">{{quantity}}</p>
                            <button
                                class="increase-button w-6 h-6 md:w-8 md:h-8 bg-gray-100 border border-gray-300 rounded hover:bg-gray-200 text-gray-800">
                                +
                            </button>
                        </div>
                    </div>

                </div>
            </div>

            {{!-- Remove button --}}
            <button class="delete-button flex-grow md:flex-grow-0 text-center text-red-500 ml-2 hover:text-red-600">
                &times;
            </button>
        </div>
    </div>
    {{/each}}

    <!-- Summary Section -->
    <div class="flex md:flex-grow mt-8 justify-between items-center pt-4 md:justify-end">
        <!-- Total Price -->
        <p class="text-xl font-bold mr-4 text-gray-800">
            Total: $<span id="total-price">123.45</span>
        </p>
        <!-- Order Button -->
        <button
            id="cart-order-button" class="bg-indigo-500 text-white px-8 py-2 rounded-lg hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500">
            ORDER
        </button>
    </div>
    {{else}}
    <div class="flex flex-col flex-grow justify-center items-center text-2xl">Consider adding some products :)</div>
    {{/if}}
</div>